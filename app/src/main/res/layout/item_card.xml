<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/grey_outline_bg">
    
    <ImageView
        android:id="@+id/imageCardItem"
        android:src="@drawable/carrot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    
    <TextView
        android:id="@+id/itemNameCardItem"
        android:text="item name"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/karla"
        app:layout_constraintTop_toBottomOf="@id/imageCardItem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/secondaryTextCardItem"
        android:text="item name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/karla"
        app:layout_constraintTop_toBottomOf="@id/itemNameCardItem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/prizeTextCardItem"
        android:text="prize"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/karla"
        app:layout_constraintTop_toBottomOf="@id/secondaryTextCardItem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/addBtnCardItem"
        android:background="@null"
        android:src="@drawable/add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/prizeTextCardItem"
        app:layout_constraintBottom_toBottomOf="@id/prizeTextCardItem"/>


</androidx.constraintlayout.widget.ConstraintLayout>